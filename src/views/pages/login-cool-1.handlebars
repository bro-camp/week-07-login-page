<div class="section">
  <div class="container">
    <div class="row full-height justify-content-center">
      <div class="col-12 text-center align-self-center py-5">
        <div class="section pb-5 pt-5 pt-sm-2 text-center">
          <h6 class="mb-0 pb-3"><span>Log In </span><span>Sign Up</span></h6>
          <input class="checkbox" type="checkbox" id="reg-log" name="reg-log" />
          <label for="reg-log"></label>
          <div class="card-3d-wrap mx-auto">
            <div class="card-3d-wrapper">

              <form action="/account/auth/login" method="post">
                <div class="card-front">
                  <div class="center-wrap">
                    <div class="section text-center">
                      <h4 class="mb-4 pb-3">Log In</h4>
                      <div class="form-group">
                        <input type="text" name="username" class="form-style" placeholder="Your Username"
                          id="login-username" autocomplete="off">
                      </div>
                      <div class="form-group mt-2">
                        <input type="password" name="password" class="form-style" placeholder="Your Password"
                          id="login-password" autocomplete="off">
                      </div>
                      {{!-- <a href="#" class="btn mt-4">submit</a> --}}
                      <button class="btn mt-4" type="submit">LOG IN</button>
                      {{!-- <p class="mb-0 mt-4 text-center"><a href="#0" class="link">Forgot your password?</a></p>
                      --}}
                    </div>
                  </div>
                </div>
              </form>

              <form action="/account/auth/signup" method="post">
                <div class="card-back">
                  <div class="center-wrap">
                    <div class="section text-center">
                      <h4 class="mb-4 pb-3">Sign Up</h4>
                      <div class="form-group">
                        <input type="text" name="displayName" class="form-style" placeholder="Your Full Name"
                          id="signup-display-name" autocomplete="off">
                      </div>
                      <div class="form-group mt-2">
                        <input type="text" name="username" class="form-style" placeholder="Your Username"
                          id="signup-username" autocomplete="off">
                      </div>
                      <div class="form-group mt-2">
                        <input type="email" name="email" class="form-style" placeholder="Your Email" id="signup-email"
                          autocomplete="off">
                      </div>
                      <div class="form-group mt-2">
                        <input type="password" name="password" class="form-style" placeholder="Your Password"
                          id="signup-password" autocomplete="off">
                      </div>
                      {{!-- <a href="#" class="btn mt-4">submit</a> --}}
                      <button class="btn mt-4" type="submit">SIGN UP</button>
                    </div>
                  </div>
                </div>
              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
